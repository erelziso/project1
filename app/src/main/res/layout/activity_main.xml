<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_gravity="top"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
        android:id="@+id/logOutPhoto"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:src="@drawable/log_out_button"
        android:gravity="center_horizontal"
        >
    </ImageView>


        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:src="@drawable/jesus_welcome"
            android:gravity="center_horizontal"
            >
        </ImageView>

        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="hello guest"
            android:textSize="25dp"
            android:textColor="#212121"
            >
        </TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/signInButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Sign In"
            android:textSize="20dp"
            android:visibility="visible"
            >
        </Button>

        <Button
            android:id="@+id/logInButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Log In"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            >
        </Button>

        <Button
            android:id="@+id/addButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Add"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            >
        </Button>

        <Button
            android:id="@+id/shopButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Shop"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            >
        </Button>

        <Button
            android:id="@+id/addPCButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Add PC"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            >
        </Button>

        <Button
            android:id="@+id/shopPCButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="PC Shop"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            >
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/deletePCEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="delete"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                >
            </EditText>


            <Button

                android:id="@+id/deletePCButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:text="delete"
                android:textSize="20dp">

            </Button>

            <Button
                android:id="@+id/decoyButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="choose"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                >
            </Button>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>


